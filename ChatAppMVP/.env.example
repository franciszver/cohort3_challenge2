# -------------------------
# Expo / React Native
# -------------------------
EXPO_PROJECT_NAME=chat-app-mvp
EXPO_PUBLIC_API_URL=https://your-api-url.amazonaws.com/graphql

# -------------------------
# AWS Amplify / Cognito
# -------------------------
AMPLIFY_AUTH_REGION=us-east-1
AMPLIFY_AUTH_USER_POOL_ID=your_cognito_user_pool_id
AMPLIFY_AUTH_USER_POOL_WEB_CLIENT_ID=your_cognito_client_id
AMPLIFY_AUTH_IDENTITY_POOL_ID=your_identity_pool_id

# -------------------------
# AWS AppSync (GraphQL API)
# -------------------------
AMPLIFY_APPSYNC_API_URL=https://your-appsync-api-id.appsync-api.us-east-1.amazonaws.com/graphql
AMPLIFY_APPSYNC_API_KEY=your_appsync_api_key   # if using API key auth for dev
AMPLIFY_APPSYNC_REGION=us-east-1

# -------------------------
# AWS Pinpoint (Notifications)
# -------------------------
AMPLIFY_PINPOINT_APP_ID=your_pinpoint_app_id
AMPLIFY_PINPOINT_REGION=us-east-1

# -------------------------
# Optional: S3 (Media Storage)
# -------------------------
AMPLIFY_STORAGE_BUCKET=your_s3_bucket_name
AMPLIFY_STORAGE_REGION=us-east-1
